<%= bootstrap_form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <%# Header Image %>
  <div class="form-group">
    <%= form.file_field :header_image, class: "form-control" %>
    <div class="mt-1">
      <small>Current Image:</small>
      <% if post.header_image.present? %>
        <%= image_tag(post.header_image, width: '100%') %>
      <% end %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary col-12" %>
  </div>
<% end %>
